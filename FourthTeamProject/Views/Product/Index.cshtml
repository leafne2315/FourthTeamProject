            padding-bottom: 0;
        }

        .card-footer {
            text-align: center;
            padding-top: 0;
        }

        h4 {
            margin-bottom: 0;
        }

        .rounded{
            bottom: 10px;
            right: 10px;
            width: 25px;
            height: 25px;
            background-color: #1A374D;
            color: #fff;
            border-radius: 50%;
            text-align: center;
        }

        .carousel-caption{
            z-index:0;
        }
        .left{
            margin-left:10px;
        }

    </style>
}
