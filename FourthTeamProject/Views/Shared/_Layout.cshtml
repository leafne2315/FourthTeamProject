                    <ul class="js-clone-nav d-none d-lg-inline-block text-left site-menu float-right">
                        <li class="active"><a asp-controller="Home" asp-action="Index">首頁</a></li>
                        <li><a asp-controller="Product" asp-action="Index">寵物商城</a></li>
                        <li><a asp-controller="PetHotel" asp-action="Index">寵物旅館</a></li>   
                        <li><a asp-controller="PetSalon" asp-action="SalonIndex">寵物美容</a></li>
                        

                        @{
                            @if (User.Identity.IsAuthenticated && !User.IsInRole("admin"))
                            {
                                <li>
                                    <a asp-controller="Member" asp-action="Index">會員中心</a>
                                </li>
                                <a asp-controller="Employees" asp-action="EmployeeLogout">登出</a>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Member" asp-action="Login">會員登入</a>
                                </li>
                            }
                        }


                        <li>
                    


                    </ul>

                    <a asp-controller="" asp-action="" class="burger ml-auto float-right site-menu-toggle js-menu-toggle d-inline-block d-lg-none light" data-toggle="collapse" data-target="#main-navbar">
                        <span></span>
                    </a>

                </div>
            </div>
        </nav>
    </header>
    <main>
        <div id="top">
            @RenderBody()
        </div>

    </main>

    <button id="goToTop">Top</button>

    <div class="site-footer">
        <div class="inner first">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="widget">
                            <h3 class="heading">關於日安</h3>
                            <p>致力為毛孩們提供更好的生活品質，給予陪伴我們的他們最好的呵護。</p>
                            <p>◆ 此專題網頁僅為教育練習使用</p>
                        </div>

                    </div>

                    <div class="col-md-12 col-lg-6">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="widget">
                                    <h3 class="heading">Contact</h3>
                                    <ul class="list-unstyled quick-info links">
                                        <li class="email">thm101team04@gmail.com</li>
                                        <li class="phone">+886 987 654 321</li>
                                        <li class="address"><a href="https://goo.gl/maps/BpxiWM1wBejFiBH8A?coh=178573&entry=tt">寵物 · 日安—台北商業大學旗艦館</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="widget">
                                    <h3 class="heading">企業端</h3>
                                    <ul class="list-unstyled quick-info links">
                                        @{
                                            if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                            {
                                              
                                                <li>
                                                    <a asp-area="Admin" asp-controller="ProductManage" asp-action="ProductCRUD">員工系統</a>
                                                </li>

                                              
                                            }
                                            else
                                            {
                                                <li>
                                                    <a asp-controller="Employees" asp-action="EmployeeLogin">企業登入</a>
                                                </li>

                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="inner dark">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-8 mb-3 mb-md-0 mx-auto">
                        <p>
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script>.
                            All Rights Reserved. &mdash;
                            Designed with love by
                            <a href="https://untree.co" class="link-highlight">Untree.co</a>
                            <!-- License information: https://untree.co/license/ -->
                            Distributed By <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/daterangepicker.js"></script>

    <script src="~/js/custom.js"></script>
    <script src="~/js/typed.js"></script>
    <script>
        $(function () {
            var slides = $('.slides'),
                images = slides.find('img');

            images.each(function (i) {
                $(this).attr('data-id', i + 1);
            })

            var typed = new Typed('.typed-words', {
                strings: ["Hotel Rooms.", " Salon.", " Selections.", " Health Care."],
                typeSpeed: 80,
                backSpeed: 80,
                backDelay: 4000,
                startDelay: 1000,
                loop: true,
                showCursor: true,
                preStringTyped: (arrayPos, self) => {
                    arrayPos++;
                    console.log(arrayPos);
                    $('.slides img').removeClass('active');
                    $('.slides img[data-id="' + arrayPos + '"]').addClass('active');
                }

            });
        })

        document.addEventListener('DOMContentLoaded', function () {
            var goToTopButton = document.getElementById('goToTop');
            goToTopButton.addEventListener('click', function () {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        });
    </script>


    
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

