    <style>
        #top {
            margin-top: 81px;
        }

        #goToTop:hover {
            background-color: white;
            color: #1A374D;
            cursor: url('images/寵物商城pics/paw.png'), auto;
        }

        #goToTop {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background-color: #1A374D;
            color: #fff;
            border-radius: 50%;
            text-align: center;
            line-height: 50px;
            border: none;
            outline: none;
            cursor: pointer;
        }

        #header .site-nav {
            min-height: 81px
        }
    </style>
    <title>寵物 · 日安｜Pets Daily</title>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <header id="header">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close">
